// functions/tsconfig.json (DÜZELTİLMİŞ HALİ)
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    
    // 1. DÜZELTME: "lib" (kütüphane) ayarı.
    // Bu satır, TypeScript'e "Sadece modern JavaScript (ES2021)
    // tiplerini yükle, 'DOM' (web tarayıcısı) tiplerini yükleme" der.
    "lib": ["es2021"], 
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true, // Diğer kütüphanelerdeki hataları atla
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}